# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

source 'https://cdn.cocoapods.org/' # Default CocoaPods spec repo
source 'https://github.com/custom-repo/custom-podspecs.git' # Custom repo if applicable

target 'Runner' do
  use_frameworks!

  # Pods for Runner
  pod 'motion' # Ensure this is the correct pod name

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '5.0'
      end
    end
  end
end
